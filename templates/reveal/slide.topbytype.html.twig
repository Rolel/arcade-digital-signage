<section
        data-autoslide="{{ hasSlide.duration * 100 }}"
        data-state="slide-{{ slide.type }}"
        data-slideid="{{ slide.id }}"
>
    {% if slide.showtitle %}
        <h1>{{ slide.name }}</h1>
    {% endif %}

    {% for scoreboard in slide.top %}
        <h2>{{ scoreboard.game.name }} - {{ scoreboard.game.brand.name }}</h2>
        <table class="scoreboard">
            <thead>
                <tr>
                    <th class="rank">Rank</th>
                    <th class="date">Date</th>
                    <th class="name">Name</th>
                    <th class="score">Score</th>
                </tr>
            </thead>
            <tbody>
                {%  set counter = 0 %}
                {% for score in scoreboard.scores %}
                    {% set counter = counter + 1 %}
                    <tr>
                        <td class="rank">{{ counter|localizednumber('ordinal') }}</td>
                        <td class="date">{{ score.date|date("d/m/Y") }}</td>
                        <td class="name">{{ score.playername }}</td>
                        <td class="score">{{ score.value }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endfor %}
</section>